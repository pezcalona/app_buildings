<p id="notice"><%= notice %></p>
<% if flash[:building_destroy_error] %>
  <p><%= flash[:building_destroy_error] %> </p>
<% end %>


<div class="inline text-center pb-4">
<i class="bi bi-building icono"></i><h1>Buildings</h1>
</div>

<table class="table col-lg-8 mx-auto text-center">
<thead>
      <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th></th>
    </tr>
</thead>

<tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.id %></td>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= building.city %></td>
        <td class="col-1"><%= link_to 'Show', building %></td>
        <td class="col-1"><%= link_to 'Edit', edit_building_path(building) %> </td>
        <td class="col-1"><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
  
<br>

<%= link_to 'New Building', new_building_path, class:'btn btn-primary' %>
