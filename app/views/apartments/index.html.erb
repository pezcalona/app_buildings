<p id="notice"><%= notice %></p>

<div class="inline text-center pb-4">
<i class="bi bi-door-open icono"></i><h1>Apartments</h1>
</div>

<table class="table col-lg-8 mx-auto text-center">
  <thead>
    <tr>
      <th>Number</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.number %></td>
        <td><%= apartment.building.name %></td>
        <td class="col-1"><%= link_to 'Show', apartment %></td>
        <td class="col-1"><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td class="col-1"><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path, class:'btn btn-primary' %>